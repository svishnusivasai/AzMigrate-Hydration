<?xml version="1.0" encoding="utf-8"?>
<TestJobGroup>
  <!-- Resource spec points to a Windows platform image that is defined in asrsrc-prod-sea cloudtestpool -->
  <ResourceSpec>
    <Resource SKU="Standard_DS2_V2" Image="2022-DataCenter"/>
  </ResourceSpec>
  
  <Setup TimeoutMins="60">
    <BuildFiles>
      <!-- Copy Test Scripts from build drop -->
      <Copy Src="[BuildRoot]\[BuildType]-[BuildArch]\cloudtest\Extension\*" Dest="[WorkingDirectory]" Writable="true"/>
    </BuildFiles>
    <Scripts>
      <!-- Install Azure Powershell and other prereq's -->
	    <Script Path="[WorkingDirectory]\InstallPrereq.ps1" />
	  </Scripts>
  </Setup>

  <!-- Trigger Deployment Cleanup -->
  <TestJob Name="Cleanup" Type="SingleBox" Tags="Tests=Cleanup" OwnerAliases="sisunkar" TimeoutMins="6000" >
    <Execution Type="Exe" Path="C:\WINDOWS\system32\cmd.exe " Args="/c powershell.exe [WorkingDirectory]\CleanupDeployment.ps1 -SubscriptionId 'c4488a3f-a7f7-4ad4-aa72-0e1f4d9c0756' -SubscriptionName 'ASR A2A Test Extension Publication-1' -ResourceGroupName 'ASR-A2A-Stage-EXT-1'"/>
  </TestJob>
 
  <Cleanup TimeoutMins="10" />
</TestJobGroup>